<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @if (ViewBag.Title == null)
        {
            @("Shopper's Square")
        }
        else
        {
            @(ViewBag.Title + " - Shopper's Square")
        }
    </title>
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/styles")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="outer-container">
        <div class="navbar">
            <a href="/" class="navbar-title">
                <span class="title-text title-text-bg">Shopper's</span>
                <span class="title-text">Square</span>
            </a>

            @{ Html.RenderPartial("_SearchBar"); }
            
            @{ Html.RenderPartial("_AccountOptions"); }
        </div>

        <div class="body-content">
            @RenderBody()
        </div>

        <footer class="footer">
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
